@model TodoItem

@{
    ViewData["Title"] = "Todo";
    ViewData["Message"] = "Delete an Item";
    ViewData["Danger"] = "Are you sure you want to delete this?";
}

<div>
    <h3>@ViewData["Title"]</h3>
    <p>
        @ViewData["Message"]<br>
        @ViewData["Danger"]
    </p>
</div>

<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Todo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Todo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsComplete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
    </dl>

    <form asp-action="DeleteResult" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<hr />
